{
  "name": "user",
  "version": "1.0.0",
  "description": "Microservice to manage registered users.",
  "author": "Ali Idrizi",
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --testTimeout=999999",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint",
    "src/**/*.ts": "jest --bail --findRelatedTests --passWithNoTests"
  },
  "prisma": {
    "seed": "ts-node -T prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@prisma/client": "^4.7.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "nats": "^2.9.2",
    "nestjs-prisma": "^0.19.0",
    "prisma": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.2",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.3"
  }
}
