{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Client Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3003"
    },
    {
      "name": "Test Debug",
      "type": "node",
      "request": "launch",
      "outputCapture": "std",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:debug"]
    }
  ]
}
